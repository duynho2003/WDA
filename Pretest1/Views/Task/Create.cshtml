@model Pretest1.Models.TaskSheet
@{
    ViewBag.Title = "Create";
}

<h1>Add New Task</h1>

<div>
    <form asp-action="Create">
        <div>
            @Html.LabelFor(model => model.TaskName)
            @Html.EditorFor(model => model.TaskName) (*)
            @Html.ValidationMessageFor(model => model.TaskName)
        </div>
        <div>
            @Html.LabelFor(model => model.EmpID)
            <input type="text" id="EmpID" name="EmpID" value="@ViewBag.EmpID" /> (*)
            @Html.ValidationMessageFor(model => model.EmpID)
        </div>
        <div>
            @Html.LabelFor(model => model.StartTime)
            <input type="datetime-local" id="StartTime" name="StartTime"
                   value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm:ss")" /> (*)
            @Html.ValidationMessageFor(model => model.StartTime)
        </div>
        <div>
            @Html.LabelFor(model => model.FinishTime)
            @Html.EditorFor(model => model.FinishTime)
            @Html.ValidationMessageFor(model => model.FinishTime)
        </div>
        <br />
        <div>
            <input type="submit" value="Save" />
            <a asp-action="Index" class="cancel">Cancel</a>
        </div>
    </form>
</div>
